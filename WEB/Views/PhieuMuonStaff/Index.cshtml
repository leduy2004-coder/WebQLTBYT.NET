@model List<WEB.Models.Response.PhieuMuon>

@{
    ViewData["Title"] = "Danh Sách Phiếu Mượn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid my-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="card-title mb-0">Danh Sách Phiếu Mượn Của Tôi</h5>
                <a href="@Url.Action("Create", "PhieuMuonStaff")" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Thêm Phiếu Mượn
                </a>
            </div>

            <!-- Search Form -->
            <div class="mb-4">
                <form method="get" asp-action="Index" asp-controller="PhieuMuonStaff" class="d-flex align-items-center">
                    <div class="input-group w-50">
                        <input type="number" class="form-control me-2" name="maPM" placeholder="Tìm theo Mã Phiếu Mượn" value="@ViewBag.MaPMFilter">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> Tìm kiếm</button>
                    </div>
                    @if (ViewBag.MaPMFilter != null)
                    {
                        <a href="@Url.Action("Index", "PhieuMuonStaff")" class="btn btn-secondary ms-2">Xóa bộ lọc</a>
                    }
                </form>
            </div>

            <!-- PhieuMuon Table -->
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Mã Phiếu Mượn</th>
                            <th>Ngày Tạo</th>
                            <th>Người Duyệt</th>
                            <th>Tình Trạng</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model == null || !Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center">Bạn chưa có phiếu mượn nào.</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var phieuMuon in Model)
                            {
                                <tr>
                                    <td>@phieuMuon.MaPhieuMuon</td>
                                    <td>@phieuMuon.NgayTao?.ToString("dd/MM/yyyy")</td>
                                    <td>@(phieuMuon.NguoiDuyet?.HoTen ?? "Chưa duyệt")</td>
                                    <td>
                                        @if (phieuMuon.TinhTrang)
                                        {
                                            <span class="badge bg-success">Đã duyệt</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">Chưa duyệt</span>
                                        }
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-info btn-sm view-chi-tiet" data-ma="@phieuMuon.MaPhieuMuon">
                                            <i class="fas fa-eye"></i> Chi tiết
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal: Chi tiết phiếu mượn -->
<div class="modal fade" id="chiTietPhieuMuonModal" tabindex="-1" aria-labelledby="chiTietPhieuMuonModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #2A5C8E; color: white; border-bottom: none;">
                <h5 class="modal-title" id="chiTietPhieuMuonModalLabel">Chi Tiết Phiếu Mượn</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body modal-body-scrollable">
                <div id="chiTietPhieuMuonContent" class="table-responsive">
                    <!-- Nội dung sẽ được load động -->
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Xử lý sự kiện click nút xem chi tiết
            $('.view-chi-tiet').click(function () {
                var maPM = $(this).data('ma');
                
                // Load chi tiết phiếu mượn
                $.get('@Url.Action("ChiTietPhieuMuon", "PhieuMuonStaff")', { maPM: maPM }, function (data) {
                    $('#chiTietPhieuMuonContent').html(data);
                    $('#chiTietPhieuMuonModal').modal('show');
                }).fail(function (error) {
                    console.error('Error:', error);
                    alert('Có lỗi xảy ra khi tải chi tiết phiếu mượn');
                });
            });
        });
    </script>
} 