@model WEB.Models.Response.ChiTietPhieuTraResponse

<div class="container">
    <div class="row mb-3">
        <div class="col-md-6">
            <strong>Mã Phiếu Trả:</strong> @Model.PhieuTra.MaPhieuTra
        </div>
        <div class="col-md-6">
            <strong>Người Gửi:</strong> @Model.PhieuTra.MaNguoiGui
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <strong>Người Duyệt:</strong> @(Model.PhieuTra.MaNguoiDuyet ?? "Chưa duyệt")
        </div>
        <div class="col-md-6">
            <strong>Ngày Trả:</strong> @Model.PhieuTra.NgayTra.ToString("dd/MM/yyyy")
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <strong>Tình Trạng:</strong> @(Model.PhieuTra.TinhTrang ? "Đã duyệt" : "Chưa duyệt")
        </div>
    </div>

    <h6 class="mt-4">Chi Tiết Phiếu Trả</h6>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Mã Chi Tiết</th>
                <th>Mã Thiết Bị</th>
                <th>Tên Thiết Bị</th>
                <th>Số Lượng Trả</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.ChiTietPhieuTraList == null || !Model.ChiTietPhieuTraList.Any())
            {
                <tr>
                    <td colspan="4" class="text-center">Không có chi tiết phiếu trả.</td>
                </tr>
            }
            else
            {
                foreach (var chiTiet in Model.ChiTietPhieuTraList)
                {
                    <tr>
                        <td>@chiTiet.MaCT</td>
                        <td>@chiTiet.MaTB</td>
                        <td>@(chiTiet.ThietBi?.TenThietBi ?? "N/A")</td>
                        <td>@chiTiet.SoLuongTBTra</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>